@import 'color.styl'


body
	text-align center
.home
	h3
		color $red
	table
		display block
		margin 0 auto
		width 80%
		tr
			th
				background $gray2
				padding 0 1em
				border 1px solid $gray
			td
				border 1px solid $gray
			
.venta, .compra, .cliente, .cobro
	.title
		background $azul3
		h3
			color $blanco
	.boton
		background $azul1
		color $blanco
		border none
		font-size 1.1em
		padding .4em 0
	.accordion-navigation a
		background $azul2
		color $blanco
	.accordion-navigation a:hover
		background $blanco
		color $azul2
		outline 1px solid $azul1
.error
	color $red
